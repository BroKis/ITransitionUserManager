@using Microsoft.AspNetCore.Identity
@using UserManagement.IdentityDAL.Model
@inject UserManager<ApplicationUser> UserManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task 4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UserManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-info mt-4">
        
            <div class="container">
                <a class="navbar-brand" href="#">UserManager</a>
                
                    <ul class="navbar-nav">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary" asp-action="LoginForm" asp-controller="Account">Авторизация</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <p class="nav-link" role="button" aria-expanded="false">
                                    @UserManager.GetUserName((User))
                                </p>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout">
                                    <button class="btn btn-outline-danger">
                                        <i class="bi bi-box-arrow-in-right">Logout</i>
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
            </div>
        
        
    </nav>
        <div class="container">
                @RenderBody()
        </div>

    <footer>
        <div class="container">
            <p><a class="link-opacity-10" href="https://github.com/BroKis">Developer's Github</a></p>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/fba2591774.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>